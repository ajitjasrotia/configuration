# Name of nodes to start
CELERYD_NODES="w1"

# Absolute or relative path to 'celery'
CELERY_BIN="~/.virtualenvs/{{ project_name }}/bin/celery"

# App instance to use
CELERY_APP="{{ project_name }}"

# How to call manage.py
CELERYD_MULTI="multi"

# Extra command-line arguments to the worker
CELERYD_OPTS="--time-limit=300 --concurrency=3 --loglevel=INFO -O fair"

# Extra options for Celery Daemon
CELERYD_PID_FILE="/var/run/celery/celery.pid"
CELERYD_LOG_FILE="/var/log/celery/celery.log"
CELERYD_LOG_LEVEL="INFO"

# Extra options for Celery Beat
CELERYBEAT_PID_FILE="/var/run/celery/beat.pid"
CELERYBEAT_LOG_FILE="/var/log/celery/beat.log"
CELERYBEAt_LOG_LEVEL="INFO"